# Django settings
DEBUG=False
SECRET_KEY=your-secret-key
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,web,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security settings
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=False
CSRF_USE_SESSIONS=False
CSRF_COOKIE_SAMESITE=Lax

# Database settings
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=db
DB_PORT=5432

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379

# Email settings
EMAIL_HOST=your_email_host
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email
EMAIL_HOST_PASSWORD=your_email_password

# Media and Static settings
MEDIA_URL=/media/
MEDIA_ROOT=/app/media/
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles/

# Cache settings
CACHE_TTL=900
POPULAR_MOVIES_CACHE_TIMEOUT=43200

# Superuser settings
DJANGO_SUPERUSER_USERNAME=admin_username
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin_password

# Docker Hub settings (if needed)
DOCKERHUB_USERNAME=your_username
DOCKERHUB_TOKEN=your_token

# Testing settings
TEST_DB_PASSWORD=test_password

# Monitoring settings
GRAFANA_ADMIN_PASSWORD=grafana_password

# NB! IMPORTANT: Never commit the actual .env file to version control!
# This is just a template. Copy to .env and replace with your values.