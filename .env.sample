# Django settings
DEBUG=False
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=paragoni.space,www.paragoni.space

# Database settings
DB_NAME=movie_rating_db
DB_USER=movie_rating_user
DB_PASSWORD=your_strong_db_password
DB_HOST=db
DB_PORT=5432

# Superuser settings
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your_strong_admin_password

# Grafana settings
GRAFANA_ADMIN_PASSWORD=your_strong_grafana_password

# CORS settings (if needed)
